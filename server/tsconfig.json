{
  "compilerOptions": {
    "rootDir": "src",
    "jsx": "preserve",
    "target": "es6",
    "module": "umd",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./build"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "client/**/*", "**/*.spec.ts"]
}
